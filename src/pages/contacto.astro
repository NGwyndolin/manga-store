---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.preact';
---

<BaseLayout 
  title="Contacto - Akihabara Manga Store"
  description="Contáctanos para cualquier consulta. Estamos aquí para ayudarte."
  activeNav="contacto"
>
  <!-- Leaflet CSS -->
  <link 
    rel="stylesheet" 
    href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
    crossorigin=""
  />

  <!-- Header -->
  <section class="py-12 bg-gradient-to-br from-primary-500 to-secondary-600" id="contact-hero">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-4xl md:text-5xl text-white mb-4" id="contact-title">
          Contacto
        </h1>
        <p class="text-xl text-primary-50" id="contact-subtitle">
          ¿Tienes alguna pregunta? Estamos aquí para ayudarte
        </p>
      </div>
    </div>
  </section>

  <!-- Contenido Principal -->
  <section class="py-16 bg-white" id="contact-main">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
        
        <!-- Información de Contacto -->
        <div class="lg:col-span-1 space-y-6" id="contact-info-column">
          
          <!-- Datos de Contacto -->
          <div class="contact-card bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl shadow-lg border border-primary-200">
            <h2 class="font-display text-2xl text-dark-900 mb-6">
              Información
            </h2>
            
            <div class="space-y-4">
              <!-- Dirección -->
              <div class="contact-info-item flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 bg-primary-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-dark-900 mb-1">Dirección</h3>
                  <p class="text-dark-700 text-sm">
                    Gran Vía, 25<br/>
                    50006 Zaragoza, España
                  </p>
                </div>
              </div>

              <!-- Email -->
              <div class="contact-info-item flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 bg-secondary-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-dark-900 mb-1">Email</h3>
                  <a href="mailto:info@akihabara-manga.com" class="text-secondary-600 hover:text-secondary-700 text-sm">
                    info@akihabara-manga.com
                  </a>
                </div>
              </div>

              <!-- Teléfono -->
              <div class="contact-info-item flex items-start gap-3">
                <div class="flex-shrink-0 w-10 h-10 bg-primary-500 rounded-lg flex items-center justify-center">
                  <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-dark-900 mb-1">Teléfono</h3>
                  <a href="tel:+34976123456" class="text-primary-600 hover:text-primary-700 text-sm">
                    +34 976 12 34 56
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Horarios -->
          <div class="contact-card bg-gradient-to-br from-secondary-50 to-white p-6 rounded-xl shadow-lg border border-secondary-200">
            <h2 class="font-display text-2xl text-dark-900 mb-6">
              Horarios
            </h2>
            
            <div class="space-y-3 text-sm">
              <div class="schedule-item flex justify-between items-center py-2 border-b border-dark-200">
                <span class="font-semibold text-dark-900">Lunes - Viernes</span>
                <span class="text-dark-700">10:00 - 20:00</span>
              </div>
              <div class="schedule-item flex justify-between items-center py-2 border-b border-dark-200">
                <span class="font-semibold text-dark-900">Sábados</span>
                <span class="text-dark-700">10:00 - 14:00</span>
              </div>
              <div class="schedule-item flex justify-between items-center py-2">
                <span class="font-semibold text-dark-900">Domingos</span>
                <span class="text-red-600 font-semibold">Cerrado</span>
              </div>
            </div>
          </div>

          <!-- Redes Sociales -->
          <div class="contact-card bg-gradient-to-br from-primary-50 to-white p-6 rounded-xl shadow-lg border border-primary-200">
            <h2 class="font-display text-2xl text-dark-900 mb-4">
              Síguenos
            </h2>
            <div class="flex gap-3" id="social-links">
              <a href="#" class="social-icon w-10 h-10 bg-primary-500 hover:bg-primary-600 text-white rounded-lg flex items-center justify-center transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              </a>
              <a href="#" class="social-icon w-10 h-10 bg-primary-500 hover:bg-primary-600 text-white rounded-lg flex items-center justify-center transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
              <a href="#" class="social-icon w-10 h-10 bg-primary-500 hover:bg-primary-600 text-white rounded-lg flex items-center justify-center transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0C8.74 0 8.333.015 7.053.072 5.775.132 4.905.333 4.14.63c-.789.306-1.459.717-2.126 1.384S.935 3.35.63 4.14C.333 4.905.131 5.775.072 7.053.012 8.333 0 8.74 0 12s.015 3.667.072 4.947c.06 1.277.261 2.148.558 2.913.306.788.717 1.459 1.384 2.126.667.666 1.336 1.079 2.126 1.384.766.296 1.636.499 2.913.558C8.333 23.988 8.74 24 12 24s3.667-.015 4.947-.072c1.277-.06 2.148-.262 2.913-.558.788-.306 1.459-.718 2.126-1.384.666-.667 1.079-1.335 1.384-2.126.296-.765.499-1.636.558-2.913.06-1.28.072-1.687.072-4.947s-.015-3.667-.072-4.947c-.06-1.277-.262-2.149-.558-2.913-.306-.789-.718-1.459-1.384-2.126C21.319 1.347 20.651.935 19.86.63c-.765-.297-1.636-.499-2.913-.558C15.667.012 15.26 0 12 0zm0 2.16c3.203 0 3.585.016 4.85.071 1.17.055 1.805.249 2.227.415.562.217.96.477 1.382.896.419.42.679.819.896 1.381.164.422.36 1.057.413 2.227.057 1.266.07 1.646.07 4.85s-.015 3.585-.074 4.85c-.061 1.17-.256 1.805-.421 2.227-.224.562-.479.96-.899 1.382-.419.419-.824.679-1.38.896-.42.164-1.065.36-2.235.413-1.274.057-1.649.07-4.859.07-3.211 0-3.586-.015-4.859-.074-1.171-.061-1.816-.256-2.236-.421-.569-.224-.96-.479-1.379-.899-.421-.419-.69-.824-.9-1.38-.165-.42-.359-1.065-.42-2.235-.045-1.26-.061-1.649-.061-4.844 0-3.196.016-3.586.061-4.861.061-1.17.255-1.814.42-2.234.21-.57.479-.96.9-1.381.419-.419.81-.689 1.379-.898.42-.166 1.051-.361 2.221-.421 1.275-.045 1.65-.06 4.859-.06l.045.03zm0 3.678c-3.405 0-6.162 2.76-6.162 6.162 0 3.405 2.76 6.162 6.162 6.162 3.405 0 6.162-2.76 6.162-6.162 0-3.405-2.76-6.162-6.162-6.162zM12 16c-2.21 0-4-1.79-4-4s1.79-4 4-4 4 1.79 4 4-1.79 4-4 4zm7.846-10.405c0 .795-.646 1.44-1.44 1.44-.795 0-1.44-.646-1.44-1.44 0-.794.646-1.439 1.44-1.439.793-.001 1.44.645 1.44 1.439z"/>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Formulario de Contacto -->
        <div class="lg:col-span-2" id="contact-form-column">
          <div class="bg-white rounded-xl shadow-xl p-8 border border-dark-100" id="form-card">
            <h2 class="font-display text-3xl text-dark-900 mb-2">
              Envíanos un Mensaje
            </h2>
            <p class="text-dark-600 mb-8">
              Completa el formulario y te responderemos en menos de 24 horas
            </p>
            
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mapa con Leaflet -->
  <section class="py-16 bg-dark-50" id="map-section">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        <h2 class="font-display text-3xl text-dark-900 mb-8 text-center" id="map-title">
          Encuéntranos
        </h2>
        <div class="bg-white rounded-xl shadow-xl overflow-hidden border border-dark-100" id="map-container">
          <div id="map" style="height: 450px; width: 100%;"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Leaflet JS -->
  <script 
    is:inline
    src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
    integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
    crossorigin=""
  ></script>

  <script is:inline>
    // Inicializar el mapa cuando se carga la página
    document.addEventListener('DOMContentLoaded', function() {
      // Coordenadas de Gran Vía, 25, Zaragoza
      const lat = 41.6471;
      const lng = -0.8893;

      // Crear el mapa centrado en la ubicación
      const map = L.map('map').setView([lat, lng], 16);

      // Añadir capa de OpenStreetMap
      L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors',
        maxZoom: 19
      }).addTo(map);

      // Crear icono personalizado (opcional)
      const customIcon = L.icon({
        iconUrl: 'data:image/svg+xml;base64,',
        iconSize: [32, 48],
        iconAnchor: [16, 48],
        popupAnchor: [0, -48]
      });

      // Añadir marcador en la ubicación
      const marker = L.marker([lat, lng], { icon: customIcon }).addTo(map);

      // Añadir popup al marcador
      marker.bindPopup(`
        <div style="text-align: center; font-family: system-ui, -apple-system, sans-serif;">
          <strong style="font-size: 16px; color: #1F2937;">Akihabara Manga Store</strong><br/>
          <span style="color: #6B7280; font-size: 14px;">Gran Vía, 25</span><br/>
          <span style="color: #6B7280; font-size: 14px;">50006 Zaragoza</span><br/>
          <a href="https://www.openstreetmap.org/?mlat=${lat}&mlon=${lng}#map=16/${lat}/${lng}" target="_blank" style="color: #EF4444; font-size: 12px; margin-top: 8px; display: inline-block;">Ver en OpenStreetMap →</a>
        </div>
      `).openPopup();
    });
  </script>

  <!-- Animaciones GSAP -->
  <script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    
    gsap.registerPlugin(ScrollTrigger);

    // Animación del Hero al cargar
    const heroTimeline = gsap.timeline({ defaults: { ease: 'power3.out' } });
    
    heroTimeline
      .from('#contact-title', {
        y: -40,
        opacity: 0,
        duration: 0.8
      })
      .from('#contact-subtitle', {
        y: -20,
        opacity: 0,
        duration: 0.6
      }, '-=0.4');

    // Animación de las tarjetas de contacto (columna izquierda)
    gsap.from('.contact-card', {
      scrollTrigger: {
        trigger: '#contact-info-column',
        start: 'top 70%'
      },
      x: -60,
      opacity: 0,
      duration: 0.8,
      stagger: 0.2,
      ease: 'power2.out'
    });

    // Animación de los items dentro de la primera tarjeta
    gsap.from('.contact-info-item', {
      scrollTrigger: {
        trigger: '#contact-info-column',
        start: 'top 65%'
      },
      x: -30,
      opacity: 0,
      duration: 0.6,
      stagger: 0.15,
      delay: 0.3,
      ease: 'power2.out'
    });

    // Animación de los horarios
    gsap.from('.schedule-item', {
      scrollTrigger: {
        trigger: '#contact-info-column',
        start: 'top 60%'
      },
      x: -20,
      opacity: 0,
      duration: 0.5,
      stagger: 0.1,
      delay: 0.6,
      ease: 'power2.out'
    });

    // Animación de los iconos de redes sociales
    gsap.from('.social-icon', {
      scrollTrigger: {
        trigger: '#social-links',
        start: 'top 80%'
      },
      scale: 0,
      rotation: 180,
      opacity: 0,
      duration: 0.6,
      stagger: 0.1,
      delay: 0.8,
      ease: 'back.out(2)'
    });

    // Animación del formulario (columna derecha)
    gsap.from('#form-card', {
      scrollTrigger: {
        trigger: '#contact-form-column',
        start: 'top 70%'
      },
      x: 60,
      opacity: 0,
      duration: 0.9,
      ease: 'power2.out'
    });

    // Animación del título del mapa
    gsap.from('#map-title', {
      scrollTrigger: {
        trigger: '#map-section',
        start: 'top 70%'
      },
      y: -30,
      opacity: 0,
      duration: 0.7
    });

    // Animación del contenedor del mapa
    gsap.from('#map-container', {
      scrollTrigger: {
        trigger: '#map-section',
        start: 'top 65%'
      },
      scale: 0.95,
      y: 40,
      opacity: 0,
      duration: 1,
      ease: 'power2.out',
      delay: 0.2
    });
  </script>
</BaseLayout>
