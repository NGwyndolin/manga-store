          </p>
          <p class="text-2xl font-semibold text-primary-600 mb-8" id="thanks-emoji">
            üìö‚ú®
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center" id="thanks-buttons">
            <a href="/tienda" class="btn-primary">
              Explorar el Cat√°logo
            </a>
            <a href="/comunidad" class="btn-secondary">
              Unirte a la Comunidad
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Animaciones GSAP -->
  <script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';
    
    gsap.registerPlugin(ScrollTrigger);

    // Animaci√≥n del Hero al cargar
    const heroTimeline = gsap.timeline({ defaults: { ease: 'power3.out' } });
    
    heroTimeline
      .from('#about-title', {
        y: -40,
        opacity: 0,
        duration: 0.8
      })
      .from('#about-subtitle', {
        y: -20,
        opacity: 0,
        duration: 0.6
      }, '-=0.4');

    // Animaci√≥n de la secci√≥n "Nuestra Historia"
    gsap.from('#story-title', {
      scrollTrigger: {
        trigger: '#our-story',
        start: 'top 70%'
      },
      x: -50,
      opacity: 0,
      duration: 0.8,
      ease: 'power2.out'
    });

    gsap.from('#founder-quote', {
      scrollTrigger: {
        trigger: '#our-story',
        start: 'top 65%'
      },
      x: -40,
      opacity: 0,
      duration: 0.9,
      delay: 0.2,
      ease: 'back.out(1.2)'
    });

    gsap.from('.story-paragraph', {
      scrollTrigger: {
        trigger: '#story-text',
        start: 'top 75%'
      },
      y: 30,
      opacity: 0,
      duration: 0.7,
      stagger: 0.2,
      ease: 'power2.out'
    });

    // Animaci√≥n del t√≠tulo del Timeline
    gsap.from('#timeline-title', {
      scrollTrigger: {
        trigger: '#timeline-section',
        start: 'top 70%'
      },
      scale: 0.8,
      opacity: 0,
      duration: 0.7,
      ease: 'back.out(1.5)'
    });

    // Animaci√≥n del Timeline - items aparecen uno tras otro
    gsap.from('.timeline-item', {
      scrollTrigger: {
        trigger: '#timeline-container',
        start: 'top 70%'
      },
      x: -100,
      opacity: 0,
      duration: 0.8,
      stagger: {
        amount: 1.2,
        from: 'start'
      },
      ease: 'power2.out'
    });

    // Animaci√≥n de los badges de a√±o
    gsap.from('.timeline-item > div:first-child > div', {
      scrollTrigger: {
        trigger: '#timeline-container',
        start: 'top 70%'
      },
      scale: 0,
      rotation: 180,
      opacity: 0,
      duration: 0.6,
      stagger: 0.25,
      ease: 'back.out(2)'
    });

    // Animaci√≥n del header de Valores
    gsap.from('#values-header', {
      scrollTrigger: {
        trigger: '#values-section',
        start: 'top 70%'
      },
      y: -30,
      opacity: 0,
      duration: 0.7
    });

    // Animaci√≥n de las tarjetas de valores
    gsap.from('.value-card', {
      scrollTrigger: {
        trigger: '#values-grid',
        start: 'top 70%'
      },
      y: 60,
      opacity: 0,
      rotation: 3,
      duration: 0.9,
      stagger: {
        amount: 0.6,
        grid: [2, 2],
        from: 'start'
      },
      ease: 'back.out(1.3)'
    });

    // Animaci√≥n de los iconos dentro de las tarjetas
    gsap.from('.value-card .w-14', {
      scrollTrigger: {
        trigger: '#values-grid',
        start: 'top 70%'
      },
      scale: 0,
      rotation: -180,
      duration: 0.7,
      stagger: 0.15,
      delay: 0.3,
      ease: 'back.out(2)'
    });

    // Animaci√≥n del agradecimiento final
    gsap.from('#thanks-card', {
      scrollTrigger: {
        trigger: '#final-thanks',
        start: 'top 75%'
      },
      scale: 0.9,
      y: 50,
      opacity: 0,
      duration: 1,
      ease: 'back.out(1.5)'
    });

    gsap.from('#thanks-title', {
      scrollTrigger: {
        trigger: '#final-thanks',
        start: 'top 70%'
      },
      y: 30,
      opacity: 0,
      duration: 0.7,
      delay: 0.3
    });

    gsap.from('#thanks-text', {
      scrollTrigger: {
        trigger: '#final-thanks',
        start: 'top 70%'
      },
      y: 20,
      opacity: 0,
      duration: 0.7,
      delay: 0.5
    });

    gsap.from('#thanks-emoji', {
      scrollTrigger: {
        trigger: '#final-thanks',
        start: 'top 70%'
      },
      scale: 0,
      rotation: 360,
      opacity: 0,
      duration: 0.8,
      delay: 0.7,
      ease: 'back.out(2)'
    });

    gsap.from('#thanks-buttons a', {
      scrollTrigger: {
        trigger: '#final-thanks',
        start: 'top 70%'
      },
      y: 20,
      opacity: 0,
      duration: 0.6,
      stagger: 0.15,
      delay: 0.9
    });
  </script>
</BaseLayout>
