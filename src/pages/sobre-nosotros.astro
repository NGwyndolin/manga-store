  <!-- Agradecimiento Final -->
  <section class="py-16 bg-gradient-to-br from-primary-500 to-secondary-600" id="final-thanks">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <div class="bg-white/95 backdrop-blur rounded-2xl shadow-2xl p-8 md:p-12 text-center" id="thanks-card">
