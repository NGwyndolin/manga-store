---
import BaseLayout from '../layouts/BaseLayout.astro';
import TiendaClient from '../components/TiendaClient.preact';
import { getAvailableGenres } from '../services/anilistApi';

const genres = getAvailableGenres();
---

<BaseLayout 
  title="Tienda - Akihabara Manga Store"
  description="Explora nuestro cat치logo completo de mangas."
  activeNav="tienda"
>
  <section class="py-8 bg-dark-50" id="tienda-header">
    <div class="container mx-auto px-4">
      <h1 class="font-display text-4xl text-dark-900 mb-4" id="tienda-title">
        Cat치logo de Mangas
      </h1>
      <p class="text-dark-600 text-lg" id="catalog-subtitle">
        Explora nuestra colecci칩n de mangas
      </p>
    </div>
  </section>

  <section class="py-8">
    <div class="container mx-auto px-4">
      <TiendaClient genres={genres} client:load />
    </div>
  </section>
</BaseLayout>

<script>
  import { gsap } from 'gsap';
  
  // Animaci칩n del header de la tienda al cargar
  gsap.from('#tienda-title', {
    y: -30,
    opacity: 0,
    duration: 0.8,
    ease: 'power3.out'
  });

  gsap.from('#catalog-subtitle', {
    y: -20,
    opacity: 0,
    duration: 0.8,
    delay: 0.2,
    ease: 'power3.out'
  });
</script>
