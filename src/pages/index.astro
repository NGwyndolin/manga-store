---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getPopularMangas } from '../services/anilistApi';
import MangaCard from '../components/MangaCard.preact';

const featuredMangas = await getPopularMangas(6);
---

<BaseLayout 
  title="Inicio - Akihabara Manga Store"
  description="Descubre la mejor selección de mangas en Akihabara. Últimas novedades, clásicos imprescindibles y ediciones especiales."
  activeNav="home"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary-500 to-secondary-600 text-white py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="font-display text-5xl md:text-6xl mb-6 animate-fade-in">
          Tu Paraíso del Manga en Akihabara
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-primary-50 animate-slide-up">
          Descubre miles de títulos, desde clásicos legendarios hasta las últimas novedades directamente desde Japón.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center animate-slide-up">
          <a href="/tienda" class="btn-primary bg-white text-primary-600 hover:bg-primary-50">
            Explorar Tienda
          </a>
          <a href="/sobre-nosotros" class="btn-outline border-white text-white hover:bg-white hover:text-primary-600">
            Conocer Más
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Stats -->
  <section class="py-12 bg-dark-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
        <div class="animate-fade-in">
          <div class="text-4xl font-display text-primary-600 mb-2">5000+</div>
          <div class="text-dark-600">Títulos Disponibles</div>
        </div>
        <div class="animate-fade-in">
          <div class="text-4xl font-display text-primary-600 mb-2">15</div>
          <div class="text-dark-600">Años de Experiencia</div>
        </div>
        <div class="animate-fade-in">
          <div class="text-4xl font-display text-primary-600 mb-2">10k+</div>
          <div class="text-dark-600">Clientes Satisfechos</div>
        </div>
        <div class="animate-fade-in">
          <div class="text-4xl font-display text-primary-600 mb-2">24/7</div>
          <div class="text-dark-600">Soporte Online</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Mangas -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-display text-4xl text-dark-900 mb-4">
          Mangas Populares
        </h2>
        <p class="text-dark-600 text-lg">
          Los títulos más buscados por nuestra comunidad
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {featuredMangas.map((manga) => (
          <MangaCard manga={manga} client:visible />
        ))}
      </div>

      <div class="text-center mt-12">
        <a href="/tienda" class="btn-primary">
          Ver Todo el Catálogo
        </a>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="py-16 bg-gradient-to-r from-secondary-500 to-primary-500 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-display text-4xl mb-6">
        ¿Primera vez en nuestra tienda?
      </h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto text-secondary-50">
        Únete a nuestra comunidad y recibe recomendaciones personalizadas, ofertas exclusivas y las últimas novedades del mundo del manga.
      </p>
      <a href="/comunidad" class="btn-primary bg-white text-primary-600 hover:bg-primary-50">
        Unirse a la Comunidad
      </a>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-display text-4xl text-dark-900 mb-4">
          ¿Por Qué Elegirnos?
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="font-display text-xl mb-3">Calidad Garantizada</h3>
          <p class="text-dark-600">
            Todos nuestros productos son originales y están en perfecto estado.
          </p>
        </div>

        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-secondary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-display text-xl mb-3">Envío Rápido</h3>
          <p class="text-dark-600">
            Entregas en 24-48h en Tokio y envíos internacionales disponibles.
          </p>
        </div>

        <div class="card p-6 text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="font-display text-xl mb-3">Comunidad Activa</h3>
          <p class="text-dark-600">
            Miles de otakus comparten sus experiencias y recomendaciones.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  
  gsap.registerPlugin(ScrollTrigger);

  // Animación del Hero Section al cargar
  const heroTimeline = gsap.timeline({ defaults: { ease: 'power3.out' } });
  
  heroTimeline
    .from('section:first-of-type h1', {
      y: 50,
      opacity: 0,
      duration: 1
    })
    .from('section:first-of-type p', {
      y: 30,
      opacity: 0,
      duration: 0.8
    }, '-=0.5')
    .from('section:first-of-type .flex.gap-4 a', {
      y: 20,
      opacity: 0,
      duration: 0.6,
      stagger: 0.2,
      clearProps: 'all'
    }, '-=0.4');

  // Animación de las estadísticas con stagger
  gsap.from('.bg-dark-50 > div > div', {
    scrollTrigger: {
      trigger: '.bg-dark-50',
      start: 'top 80%',
      toggleActions: 'play none none none'
    },
    y: 50,
    opacity: 0,
    duration: 0.8,
    stagger: 0.15,
    ease: 'back.out(1.2)',
    clearProps: 'all'
  });

  // Animación del título de Mangas Populares
  gsap.from('section:nth-of-type(3) .text-center', {
    scrollTrigger: {
      trigger: 'section:nth-of-type(3)',
      start: 'top 75%'
    },
    y: 30,
    opacity: 0,
    duration: 0.8,
    clearProps: 'all'
  });

  // Animación del grid de mangas
  gsap.from('section:nth-of-type(3) .grid > div', {
    scrollTrigger: {
      trigger: 'section:nth-of-type(3) .grid',
      start: 'top 70%'
    },
    y: 60,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    ease: 'power2.out',
    clearProps: 'all'
  });

  // Animación del botón "Ver Todo el Catálogo"
  gsap.from('section:nth-of-type(3) .text-center:last-of-type', {
    scrollTrigger: {
      trigger: 'section:nth-of-type(3) .text-center:last-of-type',
      start: 'top 85%'
    },
    scale: 0.8,
    opacity: 0,
    duration: 0.6,
    clearProps: 'all'
  });

  // Animación del Call to Action
  gsap.from('section:nth-of-type(4) > div > *', {
    scrollTrigger: {
      trigger: 'section:nth-of-type(4)',
      start: 'top 70%'
    },
    y: 40,
    opacity: 0,
    duration: 0.8,
    stagger: 0.2,
    clearProps: 'all'
  });

  // Animación de las tarjetas "Por Qué Elegirnos"
  gsap.from('section:last-of-type .card', {
    scrollTrigger: {
      trigger: 'section:last-of-type .grid',
      start: 'top 75%'
    },
    y: 80,
    opacity: 0,
    rotation: 5,
    duration: 1,
    stagger: {
      amount: 0.6,
      from: 'start'
    },
    ease: 'back.out(1.4)',
    clearProps: 'all'
  });
</script>


