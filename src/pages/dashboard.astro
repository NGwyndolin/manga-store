---

<DashboardLayout title="Dashboard - Panel de Control">
  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    {stats.map(stat => (
      <div class="bg-white rounded-xl shadow-lg p-6 border border-dark-100 hover:shadow-xl transition-shadow">
        <div class="flex items-center justify-between mb-4">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={stat.icon} />
            </svg>
          </div>
          <span class={`text-sm font-semibold ${
            stat.trend === 'up' ? 'text-green-600' : 
            stat.trend === 'down' ? 'text-red-600' : 
            'text-dark-600'
          }`}>
            {stat.change}
          </span>
        </div>
        <h3 class="text-dark-600 text-sm font-medium mb-1">{stat.title}</h3>
        <p class="text-3xl font-bold text-dark-900">{stat.value}</p>
      </div>
    ))}
  </div>

  <!-- Charts Row -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <!-- Sales Chart -->
    <div class="lg:col-span-2 bg-white rounded-xl shadow-lg p-6 border border-dark-100">
      <div class="flex items-center justify-between mb-6">
        <div>
          <h3 class="text-lg font-semibold text-dark-900">Ventas de la Semana</h3>
          <p class="text-sm text-dark-600">Últimos 7 días</p>
        </div>
        <select class="form-input py-2 text-sm">
          <option>Esta semana</option>
          <option>Este mes</option>
          <option>Este año</option>
        </select>
      </div>
      <SalesChart client:load />
    </div>

    <!-- Quick Stats -->
    <div class="bg-gradient-to-br from-primary-500 to-secondary-600 rounded-xl shadow-lg p-6 text-white">
      <h3 class="text-lg font-semibold mb-6">Resumen Rápido</h3>
      <div class="space-y-4">
        <div class="bg-white/10 backdrop-blur rounded-lg p-4">
          <p class="text-primary-100 text-sm mb-1">Ventas Hoy</p>
          <p class="text-2xl font-bold">€2,847</p>
          <p class="text-xs text-primary-200 mt-1">+€342 vs ayer</p>
        </div>
        <div class="bg-white/10 backdrop-blur rounded-lg p-4">
          <p class="text-primary-100 text-sm mb-1">Pedidos Pendientes</p>
          <p class="text-2xl font-bold">23</p>
          <p class="text-xs text-primary-200 mt-1">Requieren atención</p>
        </div>
        <div class="bg-white/10 backdrop-blur rounded-lg p-4">
          <p class="text-primary-100 text-sm mb-1">Stock Bajo</p>
          <p class="text-2xl font-bold">4</p>
          <p class="text-xs text-primary-200 mt-1">Productos alertas</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Orders & Top Products -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Recent Orders -->
    <div class="bg-white rounded-xl shadow-lg border border-dark-100">
      <div class="p-6 border-b border-dark-100">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-dark-900">Pedidos Recientes</h3>
          <button class="text-sm text-primary-600 hover:text-primary-700 font-semibold">
            Ver todos →
          </button>
        </div>
      </div>
      <div class="divide-y divide-dark-100">
        {recentOrders.map(order => (
          <div class="p-4 hover:bg-dark-50 transition-colors">
            <div class="flex items-center justify-between mb-2">
              <span class="font-semibold text-dark-900">{order.id}</span>
              <span class={`px-2 py-1 text-xs font-semibold rounded-full ${
                order.status === 'completed' ? 'bg-green-100 text-green-700' :
                order.status === 'processing' ? 'bg-blue-100 text-blue-700' :
                'bg-yellow-100 text-yellow-700'
              }`}>
                {order.status === 'completed' ? 'Completado' :
                 order.status === 'processing' ? 'Procesando' :
                 'Pendiente'}
              </span>
            </div>
            <p class="text-sm text-dark-700 font-medium mb-1">{order.customer}</p>
            <p class="text-xs text-dark-600 mb-2 line-clamp-1">{order.products}</p>
            <div class="flex items-center justify-between text-xs">
              <span class="text-dark-500">{order.date}</span>
              <span class="font-bold text-primary-600">{order.amount}</span>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Top Products -->
    <div class="bg-white rounded-xl shadow-lg border border-dark-100">
      <div class="p-6 border-b border-dark-100">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-dark-900">Productos Más Vendidos</h3>
          <button class="text-sm text-primary-600 hover:text-primary-700 font-semibold">
            Ver todos →
          </button>
        </div>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          {topProducts.map((product, index) => (
            <div class="flex items-center gap-4">
              <div class="flex-shrink-0 w-8 h-8 bg-primary-100 text-primary-600 rounded-lg flex items-center justify-center font-bold text-sm">
                #{index + 1}
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-semibold text-dark-900 truncate">{product.name}</p>
                <p class="text-xs text-dark-600">{product.sales} ventas</p>
              </div>
              <div class="text-right">
                <p class="text-sm font-bold text-primary-600">{product.revenue}</p>
                <p class={`text-xs ${product.stock < 20 ? 'text-red-600 font-semibold' : 'text-dark-600'}`}>
                  Stock: {product.stock}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</DashboardLayout>
